
<!DOCTYPE html>
<html lang="en">
    <% include partials/head.ejs %>

    <style>
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .fade-in { animation: fadeIn 0.5s ease-out; }
    </style>

<body class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-700 min-h-screen flex items-center justify-center p-4">
    <div class="w-full max-w-md bg-gray-800 rounded-2xl shadow-2xl p-8 fade-in border border-gray-700">
        <!-- Header Section -->
        <div class="text-center mb-8">
            <div class="mb-4 flex justify-center">
            <img src="https://raw.githubusercontent.com/websmartbd/ParentWeb/refs/heads/main/assets/webpublic/favicon.png" alt="Logo" class="h-16 mx-auto mb-4">
            </div>
        </div>

        <!-- Error Message -->
        
        <!-- Login Form -->
        <form method="POST" class="space-y-6">
            <div>
                <div class="relative">
                    <input type="text" value="admin" name="username" required
                           class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 placeholder-gray-400 text-white"
                           placeholder="Enter your username">
                    <svg class="w-5 h-5 absolute right-3 top-3 text-gray-400" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 12c2.761 0 5-2.239 5-5s-2.239-5-5-5-5 2.239-5 5 2.239 5 5 5zm0 2c-3.866 0-7 3.134-7 7h14c0-3.866-3.134-7-7-7z"/>
                    </svg>

                </div>
            </div>

            <div>
                <div class="relative">
                    <input type="password" value="password" name="password" required
                           class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 placeholder-gray-400 text-white pr-12"
                           placeholder="••••••••">
                    <button type="button" 
                            class="absolute right-3 top-3 text-gray-400 hover:text-blue-500 active:text-blue-600 transition-colors duration-200"
                            onclick="togglePassword(this)">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                    </button>
                </div>
            </div>

            <button type="submit" 
                    class="w-full py-3 px-4 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-all flex items-center justify-center shadow-lg hover:shadow-xl">
                <span class="submit-text">Sign In</span>
                <svg class="animate-spin h-5 w-5 ml-2 hidden" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
            </button>
        </form>
    </div>

    <script>
    function togglePassword(button) {
        const passwordField = document.querySelector('input[name="password"]');
        const isVisible = passwordField.type === 'text';
        
        passwordField.type = isVisible ? 'password' : 'text';
        button.classList.toggle('text-blue-600', !isVisible);
    }

    document.querySelector('form').addEventListener('submit', function(e) {
        const btn = this.querySelector('button[type="submit"]');
        btn.disabled = true;
        btn.querySelector('.submit-text').classList.add('hidden');
        btn.querySelector('svg').classList.remove('hidden');
    });
    </script>
</body>
</html>
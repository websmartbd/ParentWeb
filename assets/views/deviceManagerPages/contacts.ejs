<div class="bg-gray-700 rounded-lg p-4 mb-4">
    <div class="flex justify-end mb-4">
        <button onclick="updateButton(this, '0xCO')" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg flex items-center">
            <i class="icon sync mr-2"></i>Update
        </button>
    </div>
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-gray-600">
                <tr>
                    <th class="px-4 py-2 text-left">Name</th>
                    <th class="px-4 py-2 text-left">Phone Number</th>
                    <th class="px-4 py-2 text-left" >Call Log</th>
                    <th class="px-4 py-2 text-left" >SMS Log</th>
                </tr>
            </thead>
            <tbody>
                <% pageData.forEach((contact) => { %>
                <tr class="border-b border-gray-600 hover:bg-gray-600">
                    <td class="px-4 py-2"><%= contact.name %></td>
                    <td class="px-4 py-2"><%= contact.phoneNo %></td>
                    <td class="px-4 py-2">
                        <a href="<%= baseURL %>/calls?filter=<%= contact.phoneNo %>" class="text-blue-400 hover:text-blue-300">Call Log</a>
                    </td>
                    <td class="px-4 py-2">
                        <a href="<%= baseURL %>/sms?filter=<%= contact.phoneNo %>" class="text-blue-400 hover:text-blue-300">SMS Log</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>
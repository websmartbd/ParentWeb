<div class="container mx-auto px-4 mt-10">
<div class="text-center mb-10">
    <p class="text-xl sm:text-2xl text-gray-100 mb-6">
       <span class="block sm:inline"> Welcome to ParentWeb</span> Made ❤️ By BM Shifat
    </p>
</div>

    <div class="ui segment">
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6">
            <!-- GPS -->
            <div class="text-center transform hover:scale-105 transition duration-300 ease-in-out">
                <a href="<%= baseURL %>/gps" class="block bg-gradient-to-r from-gray-500 to-gray-600 text-white p-6 rounded-lg shadow-lg hover:shadow-xl hover:bg-teal-800 transition-colors group">
                    <i class="fas fa-location-dot text-4xl mb-4 text-teal-400 group-hover:text-teal-300 transition-colors"></i>
                    <p class="font-medium">GPS</p>
                </a>
            </div>
            <!-- Microphone -->
            <div class="text-center transform hover:scale-105 transition duration-300 ease-in-out">
                <a href="<%= baseURL %>/microphone" class="block bg-gradient-to-r from-gray-500 to-gray-600 text-white p-6 rounded-lg shadow-lg hover:shadow-xl hover:bg-yellow-700 transition-colors group">
                    <i class="fa-solid fa-microphone text-4xl mb-4 text-red-400 group-hover:text-red-300 transition-colors"></i>
                    <p class="font-medium">Microphone</p>
                </a>
            </div>
            <!-- Contacts -->
            <div class="text-center transform hover:scale-105 transition duration-300 ease-in-out">
                <a href="<%= baseURL %>/contacts" class="block bg-gradient-to-r from-gray-500 to-gray-600 text-white p-6 rounded-lg shadow-lg hover:shadow-xl hover:bg-red-700 transition-colors group">
                    <i class="fas fa-address-book text-4xl mb-4 text-red-400 group-hover:text-red-300 transition-colors"></i>
                    <p class="font-medium">Contacts</p>
                </a>
            </div>
            <!-- Notification Log -->
            <div class="text-center transform hover:scale-105 transition duration-300 ease-in-out">
                <a href="<%= baseURL %>/notifications" class="block bg-gradient-to-r from-gray-500 to-gray-600 text-white p-6 rounded-lg shadow-lg hover:shadow-xl hover:bg-purple-800 transition-colors group">
                    <i class="fas fa-circle-exclamation text-4xl mb-4 text-purple-400 group-hover:text-purple-300 transition-colors"></i>
                    <p class="font-medium">Notification</p>
                </a>
            </div>
            <!-- Call Log -->
            <div class="text-center transform hover:scale-105 transition duration-300 ease-in-out">
                <a href="<%= baseURL %>/calls" class="block bg-gradient-to-r from-gray-500 to-gray-600 text-white p-6 rounded-lg shadow-lg hover:shadow-xl hover:bg-cyan-800 transition-colors group">
                    <i class="fa-solid fa-phone text-4xl mb-4  text-cyan-400 group-hover:text-cyan-300 transition-colors"></i>
                    <p class="font-medium">Call Log</p>
                </a>
            </div>
            <!-- SMS Manager -->
            <div class="text-center transform hover:scale-105 transition duration-300 ease-in-out">
                <a href="<%= baseURL %>/sms" class="block bg-gradient-to-r from-gray-500 to-gray-600 text-white p-6 rounded-lg shadow-lg hover:shadow-xl hover:bg-pink-800 transition-colors group">
                    <i class="fas fa-comment-dots text-4xl mb-4 text-pink-400 group-hover:text-pink-300 transition-colors"></i>
                    <p class="font-medium">SMS Manager</p>
                </a>
            </div>
            <!-- Installed Apps -->
            <div class="text-center transform hover:scale-105 transition duration-300 ease-in-out">
                <a href="<%= baseURL %>/apps" class="block bg-gradient-to-r from-gray-500 to-gray-600 text-white p-6 rounded-lg shadow-lg hover:shadow-xl hover:bg-blue-900 transition-colors group">
                    <i class="fa-brands fa-google-play text-4xl mb-4 text-emerald-400 group-hover:text-emerald-300 transition-colors"></i>
                    <p class="font-medium">Apps</p>
                </a>
            </div>
            <!-- Allowed Permissions -->
            <div class="text-center transform hover:scale-105 transition duration-300 ease-in-out">
                <a href="<%= baseURL %>/permissions" class="block bg-gradient-to-r from-gray-500 to-gray-600 text-white p-6 rounded-lg shadow-lg hover:shadow-xl hover:bg-indigo-800 transition-colors group">
                    <i class="fas fa-tasks text-4xl mb-4  text-orange-400 group-hover:text-orange-300 transition-colors"></i>
                    <p class="font-medium">Permissions</p>
                </a>
            </div>
            <!-- File Explorer -->
            <div class="text-center transform hover:scale-105 transition duration-300 ease-in-out">
                <a href="<%= baseURL %>/files" class="block bg-gradient-to-r from-gray-500 to-gray-600 text-white p-6 rounded-lg shadow-lg hover:shadow-xl hover:bg-gray-800 transition-colors group">
                    <i class="fas fa-folder-open text-4xl mb-4 text-amber-400 group-hover:text-amber-300 transition-colors"></i>
                    <p class="font-medium">File Explorer</p>
                </a>
            </div>
            <!-- Downloads -->
            <div class="text-center transform hover:scale-105 transition duration-300 ease-in-out">
                <a href="<%= baseURL %>/downloads" class="block bg-gradient-to-r from-gray-500 to-gray-600 text-white p-6 rounded-lg shadow-lg hover:shadow-xl hover:bg-indigo-900 transition-colors group">
                    <i class="fas fa-download text-4xl mb-4 text-indigo-400 group-hover:text-indigo-300 transition-colors"></i>
                    <p class="font-medium">Downloads</p>
                </a>
            </div>
        </div>
    </div>
</div>

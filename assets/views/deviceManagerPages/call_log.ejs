<div class="bg-gray-700 rounded-lg p-4 mb-4">
    <div class="flex justify-end mb-4">
        <button onclick="updateButton(this, '0xCL')" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg flex items-center">
            <i class="icon sync mr-2"></i>Update
        </button>
    </div>
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-gray-600">
                <tr>
                    <th class="px-4 py-2 text-left">Date</th>
                    <th class="px-4 py-2 text-left">Phone Number</th>
                    <th class="px-4 py-2 text-left">Status</th>
                    <th class="px-4 py-2 text-left">Duration</th>
                </tr>
            </thead>
            <tbody>
                <% pageData.forEach((callData) => { %>
                <tr class="border-b border-gray-600 hover:bg-gray-600">
                    <td class="px-4 py-2 "><%= new Date(parseInt(callData.date)).toLocaleString('en-GB', { timeZone: 'UTC' }) %></td>
                    <td class="px-4 py-2"><%= callData.phoneNo %></td>
                    <td class="px-4 py-2"><%= callData.type === 1 ? 'IN' : callData.type === 2 ? 'OUT' : 'MISSED' %></td>
                    <td class="px-4 py-2"><%= callData.duration %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>
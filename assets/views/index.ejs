<!DOCTYPE html>
<html class="min-h-screen">
    <% include partials/head.ejs %>

    <body class="bg-black text-gray-100 min-h-screen flex flex-col">
        <% include partials/header.ejs %>
        <main id="main-content" class="flex-grow pt-20 px-4 sm:px-6 lg:px-8">
            <div class="max-w-screen-xl mx-auto">
                <div class="border-t border-gray-700 my-4 sm:my-6"></div>
                
                <% include partials/disclaimer.ejs %>
                
                <div class="bg-gray-800/95 backdrop-blur-sm rounded-xl p-4 sm:p-6 lg:p-8 shadow-2xl ring-1 ring-gray-700/50">
                    <div class="mb-6 sm:mb-10">
                        <h3 class="text-lg sm:text-xl lg:text-2xl font-bold mb-4 sm:mb-6 text-gray-100">Online Devices</h3>
                        <div class="grid grid-cols-1 xs:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 sm:gap-6">
                            <% clientsOnline.forEach((item) => { 
                                let lsdate = new Date(item.lastSeen);
                                let deviceStr = '';
                                deviceStr += (item.dynamicData.device.manufacture !== undefined) ? item.dynamicData.device.manufacture : '';
                                deviceStr += (item.dynamicData.device.model !== undefined) ? ' (' + item.dynamicData.device.model + ')' : '';
                            %>
                            <div class="bg-gray-700/90 backdrop-blur rounded-xl p-4 hover:bg-gray-600/90 transform hover:-translate-y-1 transition-all duration-300 shadow-lg ring-1 ring-gray-600/50">
                                <div class="flex items-center mb-3">
                                    <h4 class="text-sm sm:text-base font-semibold text-gray-100 truncate"><%= item.clientID %></h4>
                                </div>
                                
                                <div class="space-y-2.5 text-sm text-gray-300">
                                    <div class="flex items-center group">
                                        <i class="icon desktop mr-2 text-green-400 group-hover:text-green-300 transition-colors"></i>
                                        <span class="truncate"><%= deviceStr %></span>
                                    </div>
                                    <div class="flex items-center group">
                                        <i class="icon globe mr-2 text-blue-400 group-hover:text-blue-300 transition-colors"></i>
                                        <span class="truncate"><%= item.dynamicData.clientIP %></span>
                                    </div>
                                    <div class="flex items-center group">
                                        <i class="icon clock mr-2 text-purple-400 group-hover:text-purple-300 transition-colors"></i>
                                        <span class="text-sm"><%= lsdate.toLocaleString('en-GB', { timeZone: 'UTC' }) %></span>
                                    </div>
                                </div>
                                
                                <a href="/manage/<%= item.clientID %>/info" 
                                   class="mt-4 bg-gradient-to-r from-green-500 to-emerald-600 hover:from-green-600 hover:to-emerald-700 text-white text-sm font-medium py-2 px-4 rounded-lg w-full block text-center transition-all duration-300 shadow-md hover:shadow-lg">
                                    Manage Device
                                </a>
                            </div>
                            <% }) %>
                        </div>
                    </div>

                    <div class="mt-8 sm:mt-12">
                        <h3 class="text-lg sm:text-xl lg:text-2xl font-bold mb-4 sm:mb-6 text-gray-100">Offline Devices</h3>
                        <div class="grid grid-cols-1 xs:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 sm:gap-6">
                            <% clientsOffline.forEach((item) => { 
                                let lsdate = new Date(item.lastSeen);
                                let deviceStr = '';
                                deviceStr += (item.dynamicData.device.manufacture !== undefined) ? item.dynamicData.device.manufacture : '';
                                deviceStr += (item.dynamicData.device.model !== undefined) ? ' (' + item.dynamicData.device.model + ')' : '';
                            %>
                            <div class="bg-gray-700/75 backdrop-blur rounded-xl p-4 hover:bg-gray-600/75 transform hover:-translate-y-1 transition-all duration-300 shadow-lg ring-1 ring-gray-600/50">
                                <div class="flex items-center mb-3">
                                    <h4 class="text-sm sm:text-base font-semibold text-gray-100 truncate"><%= item.clientID %></h4>
                                </div>
                                
                                <div class="space-y-2.5 text-sm text-gray-300">
                                    <div class="flex items-center group">
                                        <i class="icon desktop mr-2 text-gray-400 group-hover:text-gray-300 transition-colors"></i>
                                        <span class="truncate"><%= deviceStr %></span>
                                    </div>
                                    <div class="flex items-center group">
                                        <i class="icon globe mr-2 text-gray-400 group-hover:text-gray-300 transition-colors"></i>
                                        <span class="truncate"><%= item.dynamicData.clientIP %></span>
                                    </div>
                                    <div class="flex items-center group">
                                        <i class="icon clock mr-2 text-gray-400 group-hover:text-gray-300 transition-colors"></i>
                                        <span class="text-sm"><%= lsdate.toLocaleString('en-GB', { timeZone: 'UTC' }) %></span>
                                    </div>
                                </div>
                                
                                <a href="/manage/<%= item.clientID %>/info" 
                                   class="mt-4 bg-gradient-to-r from-gray-600 to-gray-700 hover:from-gray-700 hover:to-gray-800 text-white text-sm font-medium py-2 px-4 rounded-lg w-full block text-center transition-all duration-300 shadow-md hover:shadow-lg">
                                    Manage Device
                                </a>
                            </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <% include partials/footer.ejs %>
    </body>
</html>